<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controllers.GameController">
    <Canvas fx:id="gameCanvas" width="400" height="600" />

    <Button fx:id="startButton" layoutX="150" layoutY="300" text="START GAME" style="-fx-font-size: 16px;" />

    <Label fx:id="scoreLabel" layoutX="20" layoutY="20" style="-fx-text-fill: black; -fx-font-weight: bold;">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <Label fx:id="gameOverLabel" layoutX="100" layoutY="200" text="GAME OVER" style="-fx-text-fill: red; -fx-font-weight: bold;" visible="false">
        <font>
            <Font size="36.0" />
        </font>
    </Label>

    <Label fx:id="finalScoreLabel" layoutX="100" layoutY="250" style="-fx-text-fill: black; -fx-font-weight: bold;" visible="false">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <Label fx:id="highScoreLabel" layoutX="100" layoutY="300" style="-fx-text-fill: black; -fx-font-weight: bold;" visible="false">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <Button fx:id="playAgainButton" layoutX="120" layoutY="350" text="Play Again" style="-fx-font-size: 16px;" visible="false" />
    <Button fx:id="exitButton" layoutX="220" layoutY="350" text="Exit" style="-fx-font-size: 16px;" visible="false" />
    <Button fx:id="saveScoreButton" layoutX="170" layoutY="400" text="Save Score" style="-fx-font-size: 16px;" visible="false" />
</AnchorPane>