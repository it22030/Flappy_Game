<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.Controllers.GameController" prefWidth="600" prefHeight="800">
    <StackPane prefWidth="600" prefHeight="800" style="-fx-background-color: linear-gradient(to bottom, #70c5ce, #f0f0f0);">
        <Canvas fx:id="gameCanvas" width="600" height="800" />
    </StackPane>
    <TextField fx:id="playerNameField" layoutX="180" layoutY="300" prefWidth="240" promptText="Enter Player Name" />
    <Button fx:id="startButton" layoutX="260" layoutY="350" text="START GAME" />
    <Label fx:id="scoreLabel" layoutX="20" layoutY="20" text="Score: 0" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <Label fx:id="gameOverLabel" layoutX="180" layoutY="350" text="GAME IS OVER" visible="false" style="-fx-font-size: 40px; -fx-font-weight: bold;" />
    <Label fx:id="finalScoreLabel" layoutX="220" layoutY="400" text="" visible="false" style="-fx-font-size: 25px; -fx-font-weight: bold;" />
    <Label fx:id="highScoreLabel" layoutX="220" layoutY="440" text="" visible="false" style="-fx-font-size: 25px; -fx-font-weight: bold;" />
    <Button fx:id="playAgainButton" layoutX="200" layoutY="500" text="Play Again" visible="false" />
    <Button fx:id="exitButton" layoutX="320" layoutY="500" text="Exit" visible="false" />
</AnchorPane>
